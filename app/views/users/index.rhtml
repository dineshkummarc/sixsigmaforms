<h1><%= Doctor.find_by_alias(params[:doctor_alias]).friendly_name %>'s users</h1>

<table>
  <tr>
  </tr>
  
<% for user in @users %>
  <tr<%= " class='doctor_admin'" if user.is_doctor %>>
    <td><%= user.friendly_name %></td>
    <td><%= user.username %></td>
    <td>&nbsp;
<% if !user.activation_code.blank? %>
    <%= link_to 'Register!', doctor_user_path(params[:doctor_alias])+"/register?activation_code="+user.activation_code %>
<% end %>
    </td>
    <td><%= link_to 'Show', doctor_user_path(:doctor_alias => params[:doctor_alias], :action=> 'show', :id => user.id) %></td>
    <td><%= link_to 'Destroy', doctor_user_path(:doctor_alias => params[:doctor_alias], :id => user.id), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', doctor_user_path(params[:doctor_alias], 'new') %>
