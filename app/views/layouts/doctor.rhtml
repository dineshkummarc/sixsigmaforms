<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="Six Sigma Management: HipForms, a HIPAA compliant form completion tool" />
		<meta name="keywords" content="" />
		<meta name="author" content="Six Sigma Management" />
		<title>Six Sigma Management: <%= @current_doctor.friendly_name %></title>
		<%= stylesheet_link_tag 'admin' %>
		<%= javascript_include_tag 'prototype' %>
		<%= javascript_include_tag 'effects' %>
		<%= javascript_include_tag 'controls' %>
		<%= javascript_include_tag 'dragdrop' %>
		<%= javascript_include_tag 'rounded' %>
	</head>
	<body>
		<div class="header">
			<div id="header">
				<h3 class="floatright">
					<% if logged_in? -%>
						Logged in as <%= current_user.username %>, from <%= current_user.domain %>. <a href="/logout">Logout</a>
					<% else -%>
						Not logged in. <a href="/<%= params[:domain] ? params[:domain] : "manage" %>/login">Login</a>
					<% end -%>
				</h3>
				<h1>Six Sigma Management: HipForms</h1>
			</div><!--//end #header//-->
		</div>

		<div id="leftColumn">
			<div class="main rounded">
				<div class="box">
					<h2>Main</h2>
					<ul>
						<li><%= link_to 'My Home', mydashboard_path() %></li>
						<li><%= link_to 'My Account', myaccount_path() %></li>
					</ul>
				</div>
			</div>
			<div class="forms rounded">
				<div class="box">
					<h2>Forms</h2>
					<ul>
						<li><%= link_to "Drafts" + (!current_user.drafts.blank? ? " (#{current_user.drafts.count})" : ''), forms_status_path(:form_status => 'draft'), :id => 'drafts_count' %></li>
						<li><%= link_to "Submitted" + (!current_user.submitted.blank? ? " (#{current_user.submitted.count})" : ''), forms_status_path(:form_status => 'submitted') %></li>
						<li><%= link_to "Reviewed" + (!current_user.reviewed.blank? ? " (#{current_user.reviewed.count})" : ''), forms_status_path(:form_status => 'reviewed') %></li>
						<li><%= link_to "Accepted" + (!current_user.accepted.blank? ? " (#{current_user.accepted.count})" : ''), forms_status_path(:form_status => 'accepted') %></li>
					</ul>
				</div>
			</div>
<% if current_user.is_doctor? -%>
			<div class="manage rounded">
				<div class="box">
					<h2>Manage</h2>
					<ul>
						<li><%= link_to 'Doctor Account', edit_my_doctor_path() %></li>
						<li><%= link_to 'Users', users_path() %></li>
					</ul>
				</div>
			</div>
<% end -%>
		</div><!--//end #leftColumn//-->

		<div id="centerColumn">
			<p style="color: green">&nbsp;<%= flash[:notice] %></p>
			<%= yield  %>
		</div>
		<!--//end #centerColumn//-->

		<script type="text/javascript">
		Rounded('rounded', 10, 10);
		Rounded('header', 10, 10);
		</script>
	</body>
</html>
