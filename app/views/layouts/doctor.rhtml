<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="Six Sigma Management: HipForms, a HIPAA compliant form completion tool" />
		<meta name="keywords" content="" />
		<meta name="author" content="Six Sigma Management" />
		<title>Six Sigma Management: Six Sigma Doctor</title>
		<%= stylesheet_link_tag 'admin' %>
		<%= javascript_include_tag 'prototype' %>
		<%= javascript_include_tag 'controls' %>
		<%= javascript_include_tag 'effects' %>
		<%= javascript_include_tag 'dragdrop' %>
		<%= javascript_include_tag 'rounded' %>
	</head>
	<body>
		<div class="header">
			<div id="header">
				<h3 class="floatright">
					<% if logged_in? -%>
						Logged in as <%= current_user.username %>, from <%= current_user.domain %>. <a href="/logout">Logout</a>
					<% else -%>
						Not logged in. <a href="/<%= params[:domain] ? params[:domain] : "manage" %>/login">Login</a>
					<% end -%>
				</h3>
				<h1>Six Sigma Management: HipForms</h1>
			</div><!--//end #header//-->
		</div>

		<div id="leftColumn">
			<div class="forms rounded">
				<div class="box">
					<h2>Forms</h2>
					<ul>
						<% if "current_user.drafts.count" %>
						<li><%= link_to 'Drafts (#{current_user.drafts.count})', forms_status_url(:domain => current_user.domain, :form_status => 'draft') %></li>
            <% end %>
						<li><%= link_to '', '/forms/reviewed' %></li>
						<li><%= link_to '', '/forms/archived' %></li>
					</ul>
				</div>
			</div>
			<div class="manage rounded">
				<div class="box">
					<h2>Manage</h2>
					<ul>
						<li><%= link_to 'Admins', admins_url %></li>
						<li><%= link_to 'My Account', '/manage/account' %></li>
						<li><%= link_to 'Doctors', doctors_url %></li>
						<li><%= link_to 'Pages', '/manage/pages' %></li>
						<li><%= link_to 'Backups', '/manage/backups' %></li>
					</ul>
				</div>
			</div>
		</div><!--//end #leftColumn//-->

		<div id="centerColumn">
			<p style="color: green">&nbsp;<%= flash[:notice] %></p>
			<%= yield  %>
		</div>
		<!--//end #centerColumn//-->

		<script type="text/javascript">
		Rounded('rounded', 10, 10);
		</script>
		<script type="text/javascript">
		Rounded('header', 10, 10);
		</script>
	</body>
</html>
