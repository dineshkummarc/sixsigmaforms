<% form_tag login_url(params[:domain]) do -%>
<p><label for="username">Username</label><br/>
<%= text_field_tag 'username' %></p>

<p><label for="password">Password</label><br/>
<%= password_field_tag 'password' %></p>

<% if params[:domain] == 'manage' -%>
<p>Logging in as Admin</p>
<% else -%>
<p>Logging into Doctor: <span style='color:green; font-style:italic;'><%= params[:domain] %></span></p>
<% end -%>

<p><%= submit_tag 'Log in' %></p>
<% end -%>
